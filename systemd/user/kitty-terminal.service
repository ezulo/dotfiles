[Unit]
Description=Kitty terminal (main terminal backend)
PartOf=graphical-session.target

[Service]
Type=simple
ExecStart=/usr/bin/kitty --config=%h/.config/kitty/terminal.conf --class=kitty-daemon --hold sh -c "while :; do sleep 86400; done"
Restart=on-failure
RestartSec=1

[Install]
WantedBy=graphical-session.target
