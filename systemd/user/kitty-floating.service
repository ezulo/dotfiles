[Unit]
Description=Kitty terminal (floating-term backend)
PartOf=graphical-session.target

[Service]
Type=simple
ExecStart=/usr/bin/kitty --config=%h/.config/kitty/floating-term.conf --class=floating-term-daemon --hold sh -c "while :; do sleep 86400; done"
Restart=on-failure
RestartSec=1

[Install]
WantedBy=graphical-session.target
